{
  "id": "com.svipler.athom.imageposter",
  "version": "1.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Image Poster"
  },
  "description": {
    "en": "Adds support for posting/uploading Images/Pictures via Image tokens to a web site."
  },
  "category": [
    "video"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Ludvig Aldrin",
    "email": "ludvig.aldrin@gmail.com"
  },
  "flow": {
    "actions": [
      {
        "id": "sendimage",
        "title": {
          "en": "Send a image"
        },
        "droptoken": "image",
        "args": [
          {
            "name": "URL",
            "type": "text"
          }
        ]
      }
    ]
  }
}